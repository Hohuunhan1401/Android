<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewmay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6AE37A"
        android:text="MAY 1"
        android:textAlignment="center"
        android:textColor="#199128"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_kqM"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/May"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:text="0"
                android:textAlignment="viewEnd" />

            <ImageView
                android:id="@+id/imageTokuda"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/tokuda" />

            <TextView
                android:id="@+id/May2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:text="0"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_kqM2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matsau" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewmay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#661B8E"
        android:text="MAY 2"
        android:textAlignment="center"
        android:textColor="#DBE6D7"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="PLAY"
            android:textSize="20dp"
            android:background="#F14DB5"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_TimeStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Thoi gian chay "
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="15dp"
            android:background="@color/purple_200"
            />

        <EditText
            android:id="@+id/editText_Step"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Buoc nhay "
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="15dp"
            android:background="@color/purple_200"
            />

    </LinearLayout>



</LinearLayout>